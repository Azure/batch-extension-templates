{
    "parameters": {
        "poolName": {
            "type": "string",
            "metadata": {
                "description": "Id of the pool"
            }
        },
		"forestPackAppPackageName": {
            "type": "string",
			"defaultValue": "forestPackLite",
            "metadata": {
                "description": "Name of the AppPackage containing forestPack binaries"
            }
        },
        "forestPackAppPackageVersion": {
            "type": "string",
			"defaultValue": "6.2.2",
            "metadata": {
                "description": "Version of the AppPackage containing forestPack binaries"
            }
        },
		"forestPackInstallCommand": {
            "type": "string",
			"defaultValue": "forestPackSetup.exe /S",
            "metadata": {
                "description": "CommandLine for executing the forestPack installer"
            }
        },
		 "railCloneAppPackageName": {
            "type": "string",
			"defaultValue": "railCloneLite",
            "metadata": {
                "description": "Name of the AppPackage containing railClone binaries"
            }
        },
        "railCloneAppPackageVersion": {
            "type": "string",
			"defaultValue": "3.3.1",
            "metadata": {
                "description": "Version of the AppPackage containing railClone binaries"
            }
        },
		 "railCloneInstallCommand": {
            "type": "string",
			"defaultValue": "railCloneSetup.exe /S",
            "metadata": {
                "description": "CommandLine for executing the railClone installer"
            }
        },
        "maxVersion": {
            "type": "string",
            "defaultValue": "2019",
            "metadata": {
                "description": "The version of 3ds Max to install additional plugin binaries into"
            },
            "allowedValues":[
                "2018",
                "2019"
            ]
        },
		 "renderer": {
            "type": "string",
            "defaultValue": "arnold",
            "metadata": {
                "description": "The renderer to use"
            },
            "allowedValues": [
                "arnold",
                "vray"
            ]
        },
        "dedicatedVmCount": {
            "type": "int",
            "defaultValue": 1,
            "metadata": {
                "description": "The number of dedicated nodes in the Azure Batch pool"
            }
        },
        "lowPriorityVmCount": {
            "type": "int",
            "defaultValue": 0,
            "metadata": {
                "description": "The number of low priority nodes in the Azure Batch pool"
            }
        },
        "vmSize": {
            "type": "string",
            "metadata": {
                "description": "The size of the virtual machines that run the application"
            },
            "defaultValue": "Standard_D2_v2",
            "allowedValues": [
                "Standard_A8",
                "Standard_A9",
                "Standard_A10",
                "Standard_A11",
                "Standard_D1_v2",
                "Standard_D2_v2",
                "Standard_D3_v2",
                "Standard_D4_v2",
                "Standard_D5_v2",
                "Standard_D11_v2",
                "Standard_D12_v2",
                "Standard_D13_v2",
                "Standard_D14_v2",
                "Standard_D15_v2",
                "Standard_D2_v3",
                "Standard_D4_v3",
                "Standard_D8_v3",
                "Standard_D16_v3",
                "Standard_D32_v3",
                "Standard_D64_v3",
                "Standard_E2_v3",
                "Standard_E4_v3",
                "Standard_E8_v3",
                "Standard_E16_v3",
                "Standard_E32_v3",
                "Standard_E64_v3",
                "Standard_F1",
                "Standard_F2",
                "Standard_F4",
                "Standard_F8",
                "Standard_F16",
                "Standard_F2s_v2",
                "Standard_F4s_v2",
                "Standard_F8s_v2",
                "Standard_F16s_v2",
                "Standard_F32s_v2",
                "Standard_F64s_v2",
                "Standard_F72s_v2",
                "Standard_G1",
                "Standard_G2",
                "Standard_G3",
                "Standard_G4",
                "Standard_G5",
                "Standard_H8",
                "Standard_H16",
                "Standard_H8m",
                "Standard_H16m",
                "Standard_H16r",
                "Standard_H16mr",
                "Standard_L4",
                "Standard_L8",
                "Standard_L16",
                "Standard_L32",
                "Standard_M64s",
                "Standard_M64ms",
                "Standard_M128s"
            ]
        }
    },
    "variables": {
        "osType": {
            "imageReference": {
                "publisher": "batch",
                "offer": "rendering-windows2016",
                "sku": "rendering",
                "version": "latest"
            },
            "nodeAgentSKUId": "batch.node.windows amd64"
        }
    },
    "pool": {
        "id": "[parameters('poolName')]",
        "displayName": "3ds Max with forestPack and railClone pool running: [parameters('poolName')]",
        "vmSize": "[parameters('vmSize')]",
        "virtualMachineConfiguration": "[variables('osType')]",
        "targetDedicatedNodes": "[parameters('dedicatedVmCount')]",
        "targetLowPriorityNodes": "[parameters('lowPriorityVmCount')]",
        "applicationLicenses": [
            "3dsmax",
            "[parameters('renderer')]"
        ],
         "applicationPackageReferences": [
            { 
				"applicationId": "[parameters('forestPackAppPackageName')]", "version": "[parameters('forestPackAppPackageVersion')]"
            },
			{
				"applicationId": "[parameters('railCloneAppPackageName')]", "version": "[parameters('railCloneAppPackageVersion')]" 
			}
       ],
        "enableAutoScale": false,
        "enableInterNodeCommunication": false,
        "startTask": {
            "commandLine": "cmd /c \"%AZ_BATCH_APP_PACKAGE_[parameters('forestPackAppPackageName')]#[parameters('forestPackAppPackageVersion')]%\\[parameters('forestPackInstallCommand')] && xcopy \"%AZ_BATCH_APP_PACKAGE_[parameters('forestPackAppPackageName')]#[parameters('forestPackAppPackageVersion')]%\\packages\" \"%LOCALAPPDATA%\\Itoo Software\\Forest Pack\" /s /e /i && %AZ_BATCH_APP_PACKAGE_[parameters('railCloneAppPackageName')]#[parameters('railCloneAppPackageVersion')]%\\[parameters('railCloneInstallCommand')] && xcopy \"%AZ_BATCH_APP_PACKAGE_[parameters('railCloneAppPackageName')]#[parameters('railCloneAppPackageVersion')]%\\packages\" \"%LOCALAPPDATA%\\Itoo Software\\RailClone\" /s /e /i\"" ,
            "waitForSuccess": true,
            "maxTaskRetryCount": 0,
            "userIdentity": {
                "autoUser": {
                    "elevationLevel": "admin",
                    "scope": "pool"
                }
            }
        }
    }
}